<?xml version="1.0" encoding="UTF-8"?>
<!--
    Circle OS Local Manifest - Phase 3

    Current Phase: Phase 3 - UI, Build System, VPN Filter, Threat Intel
    Remote: https://github.com/bhengubv (CircleOS GitHub org)
-->
<manifest>
    <!-- Circle OS Remote -->
    <remote name="circle"
            fetch="https://github.com/bhengubv"
            revision="circle-14.0" />

    <!-- ============================================================ -->
    <!-- CIRCLE OS CORE OVERRIDES                                     -->
    <!-- Replace AOSP projects with Circle forks on circle-14.0       -->
    <!-- ============================================================ -->

    <!-- frameworks/base: privacy services, AIDL, fake response, VPN filter -->
    <remove-project name="platform/frameworks/base" />
    <project path="frameworks/base"
             name="CircleOS_platform_frameworks_base"
             remote="circle"
             revision="circle-14.0" />

    <!-- ============================================================ -->
    <!-- CIRCLE OS ADDITIONS (no AOSP project to remove)              -->
    <!-- ============================================================ -->

    <!-- Build system: lunch targets, product configs, vendorsetup.sh -->
    <project path="build/circle"
             name="CircleOS_build"
             remote="circle"
             revision="main" />

    <!-- Vendor overlay: Circle properties, packages, SELinux policy -->
    <project path="vendor/circle"
             name="CircleOS_vendor_circle"
             remote="circle"
             revision="main" />

    <!-- Device common: base device tree for Circle hardware targets -->
    <project path="device/circle/common"
             name="CircleOS_device_circle_common"
             remote="circle"
             revision="main" />

    <!-- CircleSettings: privacy dashboard, setup wizard, permission dialogs -->
    <project path="packages/apps/CircleSettings"
             name="CircleOS_packages_apps_CircleSettings"
             remote="circle"
             revision="main" />

</manifest>
