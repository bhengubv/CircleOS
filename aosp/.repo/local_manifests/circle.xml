<?xml version="1.0" encoding="UTF-8"?>
<!--
    Circle OS Local Manifest - Phase 5

    Current Phase: Phase 5 - Notification/Clipboard Privacy, DoH, Analytics,
                             Backup, Camera/Mic Indicators, Device Targets
    Minimum Device: Xiaomi Redmi Note 12 (SM6225 / sky)
    Reference Device: Google Pixel 6 (GS101 / oriole)
    Remote: https://github.com/bhengubv (CircleOS GitHub org)
-->
<manifest>
    <!-- Circle OS Remote -->
    <remote name="circle"
            fetch="https://github.com/bhengubv"
            revision="circle-14.0" />

    <!-- ============================================================ -->
    <!-- CIRCLE OS CORE OVERRIDES                                     -->
    <!-- Replace AOSP projects with Circle forks on circle-14.0       -->
    <!-- ============================================================ -->

    <!-- frameworks/base: privacy services, AIDL, fake response, VPN filter -->
    <remove-project name="platform/frameworks/base" />
    <project path="frameworks/base"
             name="CircleOS_platform_frameworks_base"
             remote="circle"
             revision="circle-14.0" />

    <!-- ============================================================ -->
    <!-- CIRCLE OS ADDITIONS (no AOSP project to remove)              -->
    <!-- ============================================================ -->

    <!-- Build system: lunch targets, product configs, vendorsetup.sh -->
    <project path="build/circle"
             name="CircleOS_build"
             remote="circle"
             revision="main" />

    <!-- Vendor overlay: Circle properties, packages, SELinux policy -->
    <project path="vendor/circle"
             name="CircleOS_vendor_circle"
             remote="circle"
             revision="main" />

    <!-- Device common: base device tree for Circle hardware targets -->
    <project path="device/circle/common"
             name="CircleOS_device_circle_common"
             remote="circle"
             revision="main" />

    <!-- CircleSettings: privacy dashboard, setup wizard, permission dialogs -->
    <project path="packages/apps/CircleSettings"
             name="CircleOS_packages_apps_CircleSettings"
             remote="circle"
             revision="main" />

    <!-- CircleLauncher: privacy-first home screen with network monitor widget -->
    <project path="packages/apps/CircleLauncher"
             name="CircleOS_packages_apps_CircleLauncher"
             remote="circle"
             revision="main" />

    <!-- ============================================================ -->
    <!-- DEVICE TREES                                                 -->
    <!-- ============================================================ -->

    <!-- Xiaomi Redmi Note 12 (SM6225/sky) — minimum supported device -->
    <project path="device/circle/redmi_note12"
             name="CircleOS_device_circle_redmi_note12"
             remote="circle"
             revision="main" />

    <!-- Google Pixel 6 (GS101/oriole) — flagship reference device -->
    <project path="device/circle/pixel6"
             name="CircleOS_device_circle_pixel6"
             remote="circle"
             revision="main" />

    <!-- Kernel: Xiaomi SM6225 (Snapdragon 685) -->
    <project path="kernel/xiaomi/sm6225"
             name="CircleOS_kernel_xiaomi_sm6225"
             remote="circle"
             revision="main" />

</manifest>
